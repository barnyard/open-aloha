 <beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
              http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="conferenceCollection" class="com.bt.aloha.media.testing.AlternateConcurrentUpdateFailureConferenceCollectionStub" init-method="init" destroy-method="destroy">
		<property name="maxTimeToLive" value="86400000" />
	</bean>

	<bean id="maxConferenceDurationScheduler" class="com.bt.aloha.media.convedia.conference.ScheduledExecutorServiceMaxConferenceDurationScheduler" />

	<bean class="com.bt.aloha.media.convedia.spring.ConferenceBeanFactoryPostProcessor" />
	<bean class="com.bt.aloha.media.convedia.spring.MaxConferenceDurationSchedulerPostProcessor" />

	<bean id="mediaServerAddressFactory" class="com.bt.aloha.media.convedia.MediaServerAddressFactory">
		<property name="mediaServerAddresses" value="127.0.0.1:6068"/>
	</bean>
</beans>